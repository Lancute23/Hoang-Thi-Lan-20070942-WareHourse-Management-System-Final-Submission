<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Manager</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to managers_path, class: button_class(theme: "transparent") do %>
      All Managers
      <% end %>
      <%= link_to edit_manager_path(@manager), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @manager.name %></p>
      </li>
      <li>
        <p class="font-semibold">Phone no:</p>
        <p><%= @manager.phone_no %></p>
      </li>
      <li>
        <p class="font-semibold">Address:</p>
        <p><%= @manager.address %></p>
      </li>
  </ul>
</div>
