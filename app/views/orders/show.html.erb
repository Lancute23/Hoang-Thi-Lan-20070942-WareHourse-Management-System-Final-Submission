<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Order</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to orders_path, class: button_class(theme: "transparent") do %>
      All Orders
      <% end %>
      <%= link_to edit_order_path(@order), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Order id:</p>
        <p><%= @order.order_ID %></p>
      </li>
      <li>
        <p class="font-semibold">Employee id:</p>
        <p><%= @order.employee_ID %></p>
      </li>
      <li>
        <p class="font-semibold">Order date:</p>
        <p><%= @order.order_date %></p>
      </li>
  </ul>
</div>
